{
  "name": "emuflight-configurator",
  "description": "Crossplatform configuration tool for Emuflight flight control system.",
  "version": "0.3.3",
  "main": "main.html",
  "chromium-args": "--disable-features=nw2",
  "bg-script": "js/eventPage.js",
  "default_locale": "en",
  "scripts": {
    "start": "gulp debug",
    "gulp": "gulp",
    "test": "karma start test/karma.conf.js"
  },
  "window": {
    "show": false,
    "icon": "images/emu_icon_128.png",
    "id": "main-window",
    "min_width": 1024,
    "min_height": 550
  },
  "repository": {
    "type": "git",
    "url": "github.com/emuflight/EmuConfigurator"
  },
  "webview": {
    "partitions": [
      {
        "name": "map",
        "accessible_resources": [
          "tabs/map.html",
          "js/tabs/map.js",
          "/js/libraries/openlayers/ol.css",
          "/js/libraries/openlayers/ol.js",
          "/images/icons/cf_icon_position.png",
          "/images/icons/cf_icon_position_nofix.png"
        ]
      }
    ]
  },
  "author": "The Emuflight open source project.",
  "license": "GPL-3.0",
  "dependencies": {
    "bluebird": "^3.7.2",
    "i18next": "^19.5.6",
    "i18next-xhr-backend": "^3.2.2",
    "inflection": "1.12.0",
    "jbox": "1.2.0",
    "jquery": "3.4.1",
    "jquery-textcomplete": "^1.8.5",
    "jquery-ui-npm": "1.12.0",
    "lru_map": "^0.3.3",
    "marked": "^1.1.0",
    "object-hash": "^2.0.3",
    "request": "^2.88.2",
    "short-unique-id": "^3.0.3",
    "universal-ga": "^1.2.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "command-exists": "^1.2.9",
    "del": "^5.1.0",
    "electron-installer-dmg": "^3.0.0",
    "follow-redirects": "^1.12.1",
    "fs-extra": "^9.0.1",
    "gulp": "^4.0.2",
    "gulp-concat": "~2.6.1",
    "gulp-debian": "~0.1.9",
    "gulp-git": "^2.10.1",
    "gulp-rename": "^2.0.0",
    "gulp-yarn": "^2.0.0",
    "gulp-zip": "^5.0.2",
    "karma": "^5.1.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-sinon": "^1.0.5",
    "karma-sinon-chai": "^2.0.2",
    "makensis": "^0.21.0",
    "mocha": "^8.0.1",
    "nw-builder": "^3.5.7",
    "os": "^0.1.1",
    "rpm-builder": "^1.2.1",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "targz": "^1.0.1",
    "temp": "^0.9.1",
    "vinyl-source-stream": "^2.0.0",
    "yarn": "^1.22.4"
  },
  "optionalDependencies": {
    "gulp-appdmg": "^1.0.3"
  }
}
